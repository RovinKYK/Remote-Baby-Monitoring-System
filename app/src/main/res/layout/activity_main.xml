<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4B192EA"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="ROVBABs"
            android:textAlignment="center"
            android:textColor="#AE3DDF"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/headingDisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="4dp"
            android:text="Your Babyâ€™s Safety at Your Fingertips"
            android:textColor="#A011E8"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_crop" />

        <TextView
            android:id="@+id/babMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="51dp"
            android:text="Baby Mode"
            android:textColor="#190000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headingDisc" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="1dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="289dp">

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="-15dp"
            android:textColorHint="#7A0096"
            app:boxBackgroundColor="#D5B5D5"
            app:boxStrokeColor="#100101"
            app:boxStrokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/babMode"
            app:layout_constraintStart_toEndOf="@+id/babMode"
            app:passwordToggleTint="#00BCD4">

            <AutoCompleteTextView
                android:id="@+id/autoComplete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#BC97E6"
                android:inputType="none"
                android:text="Disconnected"
                android:textColor="#100101"
                android:textSize="16dp" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>