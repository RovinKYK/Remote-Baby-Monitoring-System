<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4B192EA"
    android:orientation="vertical"
    android:padding="20dp"
    app:layout_insetEdge="top"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="center">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="sans-serif-black"
            android:text="ROVBABs"
            android:textAlignment="center"
            android:textColor="#AE3DDF"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/headingDisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:text="Your Baby’s Safety at Your Fingertips"
            android:textColor="#A011E8"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/heading" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="62dp"
            android:layout_height="46dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_crop" />

        <TextView
            android:id="@+id/babMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="55dp"
            android:text="Baby Mode"
            android:textColor="#190000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="1dp"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="289dp">

        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="250dp"
            android:layout_height="57dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="-15dp"
            android:textColorHint="#7A0096"
            app:boxBackgroundColor="#D5B5D5"
            app:boxStrokeColor="#100101"
            app:boxStrokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/babMode"
            app:layout_constraintStart_toEndOf="@+id/babMode"
            app:passwordToggleTint="#00BCD4">

            <AutoCompleteTextView
                android:id="@+id/autoComplete"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#BC97E6"
                android:inputType="none"
                android:text="Disconnected"
                android:textColor="#100101"
                android:textSize="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/temp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Temperature"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:background="@drawable/back2"
            android:text="Camera                     "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/back"
            android:text="25 ° C "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/textView"
            app:layout_wrapBehaviorInParent="included" />

        <TextView
            android:id="@+id/hum"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:background="@drawable/back"
            android:text="70  g m-3 "
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/temp"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:srcCompat="@drawable/hum" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/baby_vidieo" />

        <com.google.android.material.chip.Chip
            android:id="@+id/camOn"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="-8dp"
            app:chipIcon="@color/design_default_color_primary"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>